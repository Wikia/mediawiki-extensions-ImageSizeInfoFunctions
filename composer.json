{
    "require-dev": {
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "mediawiki/mediawiki-codesniffer": "^40.0",
        "mediawiki/minus-x": "^1.1",
        "php-parallel-lint/php-console-highlighter": "^0.5.0"
    },
	"scripts": {
		"lint": [
			"parallel-lint . --exclude vendor",
			"phpcs -p -s",
			"minus-x check ."
		],
		"fix": [
			"minus-x fix .",
			"phpcbf"
		]
	}
}
